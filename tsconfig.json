{
  "compilerOptions": {
    "diagnostics": true,
    "lib": ["es2018", "esnext"],

    "target": "es2017",

    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "esnext",
    "esModuleInterop": true,

    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },

  "exclude": ["coverage", "dist", "src-old"]
}
