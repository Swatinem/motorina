{
  "name": "motorina",
  "version": "0.0.0",
  "description": "",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Swatinem/motorina.git"
  },
  "bugs": {
    "url": "https://github.com/Swatinem/motorina/issues"
  },
  "homepage": "https://github.com/Swatinem/motorina#readme",
  "files": [
    "dist"
  ],
  "main": "dist/motorina.cjs.js",
  "module": "dist/motorina.esm.js",
  "types": "dist/motorina.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "pretest": "npm run build",
    "test": "jest --runInBand",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "sqlstring": "^2.3.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/sqlstring": "^2.2.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.17.0",
    "rollup-plugin-dts": "^1.1.5",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.3"
  },
  "_devDependencies": {
    "@types/mysql": "^2.15.6",
    "@types/pg": "^7.4.14",
    "mysql": "^2.17.1",
    "pg": "^7.11.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      "tests",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/src-old/"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|tsx)"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
