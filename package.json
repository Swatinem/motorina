{
  "name": "motorina",
  "version": "0.0.0",
  "description": "",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Swatinem/motorina.git"
  },
  "bugs": {
    "url": "https://github.com/Swatinem/motorina/issues"
  },
  "homepage": "https://github.com/Swatinem/motorina#readme",
  "files": [
    "dist"
  ],
  "main": "dist/motorina.cjs.js",
  "module": "dist/motorina.esm.js",
  "types": "dist/motorina.d.ts",
  "scripts": {
    "build": "rimraf dist && rollup -c && cp src/types.d.ts dist/motorina.d.ts",
    "prepublishOnly": "npm run test && npm run build",
    "test": "tsc && jest"
  },
  "devDependencies": {
    "@sucrase/jest-plugin": "^2.0.0",
    "@types/jest": "^23.3.9",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.12.5",
    "@types/pg": "^7.4.11",
    "jest": "^23.6.0",
    "mysql": "^2.16.0",
    "pg": "^7.6.1",
    "prettier": "^1.15.2",
    "rollup": "^0.67.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sucrase": "^2.0.0",
    "sucrase": "^3.6.0",
    "typescript": "3.1.6"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "src/__tests__",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": "@sucrase/jest-plugin"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(spec|test).(ts|tsx)",
      "**/?(*.)+(spec|test).(ts|tsx)"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
